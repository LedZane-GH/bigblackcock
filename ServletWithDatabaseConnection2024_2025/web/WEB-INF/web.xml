        <servlet-class>servlets.IncidentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteIncidentServlet</servlet-name>
        <servlet-class>servlets.DeleteIncidentServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>UpdateIncident</servlet-name>
        <servlet-class>servlets.UpdateIncident</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindIncident</servlet-name>
        <servlet-class>servlets.FindIncident</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>messagebyUser</servlet-name>
        <servlet-class>servlets.messagebyUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetUser</servlet-name>
        <url-pattern>/GetUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitDB</servlet-name>
        <url-pattern>/InitDB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteDB</servlet-name>
        <url-pattern>/DeleteDB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Test</servlet-name>
        <url-pattern>/Test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IncidentServlet</servlet-name>
        <url-pattern>/IncidentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteIncidentServlet</servlet-name>
        <url-pattern>/DeleteIncidentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateIncident</servlet-name>
        <url-pattern>/UpdateIncident</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindIncident</servlet-name>
        <url-pattern>/FindIncident</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>messagebyUser</servlet-name>
        <url-pattern>/messagebyUser</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    
    
</web-app>
